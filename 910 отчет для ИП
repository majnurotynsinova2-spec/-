    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const incomeInput = document.getElementById('income');
            const taxSystemSelect = document.getElementById('tax-system');
            const resultsSection = document.getElementById('results');
            const step3Section = document.getElementById('step3');
            const formInstructionsSection = document.getElementById('form-instructions');

            // Result elements
            const opvResult = document.getElementById('opv');
            const soResult = document.getElementById('so');
            const vomsResult = document.getElementById('voms');
            const taxResult = document.getElementById('tax');

            // Form 910.00 elements
            const formIncome = document.getElementById('form-income');
            const formOpv = document.getElementById('form-opv');
            const formSo = document.getElementById('form-so');
            const formVoms = document.getElementById('form-voms');
            const formTax = document.getElementById('form-tax');

            // Constants for 2024
            const MZP = 85000;
            const MRP = 3692;
            const PERIOD_MONTHS = 6;

            function formatCurrency(amount) {
                return new Intl.NumberFormat('ru-RU', { style: 'currency', currency: 'KZT', minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(amount);
            }

            function calculate() {
                const income = parseFloat(incomeInput.value) || 0;
                const taxSystem = taxSystemSelect.value;
                
                if (income > 0) {
                    const opv = (MZP * 0.1) * PERIOD_MONTHS;
                    const so = (MZP - (MZP * 0.1)) * 0.035 * PERIOD_MONTHS;
                    const voms = (MRP * 1.4) * 0.05 * PERIOD_MONTHS;
                    
                    let tax = 0;
                    if (taxSystem === 'simplified') {
                        tax = income * 0.03;
                    } else if (taxSystem === 'retail') {
                        tax = income * 0.04;
                    }

                    opvResult.textContent = formatCurrency(opv);
                    soResult.textContent = formatCurrency(so);
                    vomsResult.textContent = formatCurrency(voms);
                    taxResult.textContent = formatCurrency(tax);

                    formIncome.textContent = formatCurrency(income);
                    formOpv.textContent = formatCurrency(opv);
                    formSo.textContent = formatCurrency(so);
                    formVoms.textContent = formatCurrency(voms);
                    formTax.textContent = formatCurrency(tax);

                    resultsSection.classList.remove('hidden');
                    step3Section.classList.remove('hidden');
                    formInstructionsSection.classList.remove('hidden');
                } else {
                    resultsSection.classList.add('hidden');
                    step3Section.classList.add('hidden');
                    formInstructionsSection.classList.add('hidden');
                }
            }

            incomeInput.addEventListener('input', calculate);
            taxSystemSelect.addEventListener('change', calculate);
        });
    </script>
</body>
